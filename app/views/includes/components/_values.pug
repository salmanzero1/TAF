-
  var values = [
    {
      title: "01 Clarity",
      desc: "We bring structure to complexity. We speak plainly. We act deliberately."
    },
    {
      title: "02 Discipline",
      desc: "We follow through. We avoid noise. We move with focused intent."
    },
    {
      title: "03 Commitment",
      desc: "We deliver completely. Our promises are not conditional."
    },
    {
      title: "04 Consideration",
      desc: "We think in decades. We build with care for people, for place, for time."
    },
  ]


section.section#values
  .container
    .row
      div(class="flex flex-col")
        +heading("Our Values", "h5", "mb-24")
        +heading("What we hold to. What holds us.", "h2", "m-0")
      div(class="mt-40 mt-lg-80 grid grid-cols-8 lg:grid-cols-12 gap-x-10 gap-y-6 lg:gap-y-[56px]")
        each data in values
          div(class="flex flex-col col-span-8 lg:col-span-6 gap-6")
            +heading(data.title, "h5", "h5 !font-normal image-text line line-image m-0")
            +heading(data.desc, "h4", "h4 !font-normal m-0")

