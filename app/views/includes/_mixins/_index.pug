mixin button(text, type, className, hasFilled=false, secondary=false)
	- var filledClass = hasFilled ? 'font-white border-color-white hover:!bg-white hover:!text-[#6E5540]' : ''
	- var secondaryClass = secondary ? 'font-brown border-color-white bg-white hover:!bg-transparent hover:!text-white' : ''
	button(type=type class=`button border font-brown border-color-brown rounded-lg px-4 py-2.5 hover:bg-[#6E5540] hover:text-white ${className+ ' ' + filledClass + ' ' + secondaryClass}`)=text

mixin linkButton(text,iconName,iconSize,href,cssClass, secondaryBtn=false, noLink=false, fontBrown=false)
	- var secondary = secondaryBtn ? 'font-white' : ''
	- var afterClass = secondaryBtn ? 'bg-white' : 'bg-brown'
	- var font = fontBrown ? "font-brown" : ""

	if(noLink)
		span(class=`inline-flex items-center gap-1.5 animated-underline relative font-brown font-medium text-sm no-underline ${cssClass+ ' ' + secondary}`)=text
			i.material-symbols-outlined(style=`font-size: ${iconSize}px`, class=`rtl:rotate-[270deg]`)= iconName
			em(class=`animated-line ${afterClass}`)
	else if (fontBrown)
		a(href=href class=`inline-flex items-center gap-1.5 animated-underline relative font-medium text-sm cursor-pointer no-underline ${cssClass+ ' ' + font}`)=text
			i.material-symbols-outlined(style=`font-size: ${iconSize}px`, class=`rtl:rotate-[270deg]`)= iconName
			em(class=`animated-line ${afterClass}`)
	else
		a(href=href class=`inline-flex items-center gap-1.5 animated-underline relative font-brown font-medium text-sm cursor-pointer no-underline ${cssClass+ ' ' + secondary}`)=text
			i.material-symbols-outlined(style=`font-size: ${iconSize}px`, class=`rtl:rotate-[270deg]`)= iconName
			em(class=`animated-line ${afterClass}`)

