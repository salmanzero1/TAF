mixin input(title,type,id)
	if id
		input.form-control(type=`${type}`, name=`${title}`, placeholder=`${title}`, id=`${id}`)
	else 
		input.form-control(type=`${type}`, name=`${title}`, placeholder=`${title}`)

mixin textarea(title)
	textarea.form-control(placeholder=`${title}`)

mixin customSelect(title,small,optArr)
	.custom-select-simple
		select(class=`form-control ${small ? 'form-control--small' : ''}` placeholder=`${title}`)
			if(optArr)
				each list in optArr
					option #{list}
			else
				option #{title}
				option 1
				option 2
				option 3

mixin custom-switch(text, label, id, noGap, addClass='')
	div(class=`custom-switch ${addClass} ${noGap ? 'custom-switch--no-gap' : ''}`)
		p=text
		input.switch(type='checkbox' id=id)
		label.switch-label(for=id)=label

mixin phoneField(id)
	link(rel="stylesheet" href="../assets/css/intlTelInput.css")
	<input class="form-control" value='+971' placeholder="+971" id=#{id} name=#{id} class='' type="tel">

mixin ribbon(title, value1, label1, value2, label2, btnText, hasOr)
	.ribbon
		.ribbon__title=title
		.ribbon__values.d-none.d-lg-flex
			.ribbon__col
				.ribbon__value=value1
				.ribbon__label=label1
			if (hasOr)
				.ribbon__col
					span OR
			.ribbon__col
				.ribbon__value=value2
				.ribbon__label=label2
		+linkButton('#', btnText,'btn--white ribbon__btn')

mixin banner(heading, image, logo=false, logoURL)
	.banner.relative.mask(class="h-[555px] z-0")
		+img(image, 'banner', 'w-full h-full object-cover', false)
		if (logo)
			div(class="w-[350px] h-[130px] absolute z-10 top-[50%] ltr:left-[50%] rtl:right-[50%] translate-x-[-50%] translate-y-[-50%] mt-14 flex justify-center items-center")
				+img(logoURL, 'logo', 'max-w-[70%] md:max-w-[90%]', false)
		else
			h1.h1.text-center.z-10(class="w-full absolute top-[50%] translate-y-[-50%] text-white mt-14 px-7") #{heading}

