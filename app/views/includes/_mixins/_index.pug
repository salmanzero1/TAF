mixin rangeSlider(label, value, min, max, step,  postfix='',id)
	.range-slide-bar
		.range-slide-bar__header 
			.range-slide-bar__label=label
			.range-slide-bar__value!=value
		input.range-slider(type='text' name='my_range' value='' id=id data-min=min data-max=max data-step=step data-postfix=postfix)

mixin ribbon(title, value1, label1, value2, label2, btnText, hasOr)
	.ribbon
		.ribbon__title=title
		.ribbon__values.d-none.d-lg-flex
			.ribbon__col
				.ribbon__value=value1
				.ribbon__label=label1
			if (hasOr)
				.ribbon__col
					span OR
			.ribbon__col
				.ribbon__value=value2
				.ribbon__label=label2
		+linkButton('#', btnText,'btn--white ribbon__btn')



















