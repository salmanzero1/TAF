mixin breadcrumbs(arrb)
	.breadcrumbs-wrapper
		.container
			.breadcrumbs
				each itemb in arrb
					a(class=`breadcrumbs__link` title=itemb.navText href=itemb.navLink) #{itemb.navText}

mixin translate(en,ar)
	if(lang === 'en')
		!=en
	else
		!=ar?ar:en

mixin img(src,alt,cssClass='',lazy = true)
	if(lazy)
		img(data-src=`${paths.img}/${src}`, alt=alt class=`lazy ${cssClass}` )
	else
		img(src=`${paths.img}/${src}`, alt=alt class=cssClass)

mixin dualImg(srcDesktop,srcMob,alt,cssClass='',lazy = true)
	if(lazy)
		picture
			source(media='(min-width:575px)' data-srcset=`${paths.img}/${srcDesktop}`)
			img(data-src=`${paths.img}/${srcMob}`, alt=alt class=`lazy ${cssClass}`)
	else
		picture
			source(media='(min-width:575px)' srcset=`${paths.img}/${srcDesktop}`)
			img(src=`${paths.img}/${srcMob}`, alt=alt class=cssClass)

mixin linkButton(href,text,cssClass='')
	a(href=href title=text class=`btn ${cssClass}`)=text

mixin heading(title, headingTag, cssClass)
