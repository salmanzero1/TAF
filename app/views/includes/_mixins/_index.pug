mixin input(title,type,id)
	if id
		input.form-control(type=`${type}`, name=`${title}`, placeholder=`${title}`, id=`${id}`)
	else 
		input.form-control(type=`${type}`, name=`${title}`, placeholder=`${title}`)

mixin textarea(title)
	textarea.form-control(placeholder=`${title}`)

mixin customSelect(title,small,optArr)
	.custom-select-simple
		select(class=`form-control ${small ? 'form-control--small' : ''}` placeholder=`${title}`)
			if(optArr)
				each list in optArr
					option #{list}
			else
				option #{title}
				option 1
				option 2
				option 3

mixin custom-switch(text, label, id, noGap, addClass='')
	div(class=`custom-switch ${addClass} ${noGap ? 'custom-switch--no-gap' : ''}`)
		p=text
		input.switch(type='checkbox' id=id)
		label.switch-label(for=id)=label

